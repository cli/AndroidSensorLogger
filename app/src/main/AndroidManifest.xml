<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ess.imu_logger.app" >

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.BODY_SENSORS" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />

    <!-- <uses-feature android:name="android.hardware.type.watch" /> -->

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <activity
            android:name="ess.imu_logger.app.StartScreen"
            android:label="@string/app_name"
            android:launchMode="singleTop" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <action android:name="com.package.name.MyActivity"/>
                <category android:name="ess.imu_logger.app.StartScreen" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            <intent-filter>
                <action android:name="ess.imu_logger.libs.Util.ACTION_ANNOTATE" />
                <action android:name="ess.imu_logger.libs.Util.ACTION_OPEN_START_ACTIVITY" />

                <category android:name="android.intent.category.DEFAULT" />

                <data android:mimeType="text/plain" />
            </intent-filter>
        </activity>
        <activity
            android:name="ess.imu_logger.app.ImuLiveScreen"
            android:label="@string/title_activity_imu_live_screen"
            android:parentActivityName="ess.imu_logger.app.Debug" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="Debug" />
        </activity>
        <activity
            android:name="ess.imu_logger.app.markdownViewer.HelpScreen"
            android:label="@string/title_activity_help_screen"
            android:parentActivityName="ess.imu_logger.app.StartScreen" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="ess.imu_logger.app.StartScreen" />
        </activity>
        <activity
            android:name="ess.imu_logger.app.ApplicationSettings"
            android:label="@string/title_activity_test"
            android:parentActivityName="ess.imu_logger.app.StartScreen" />
        <activity
            android:name="ess.imu_logger.app.Debug"
            android:label="@string/title_activity_debug"
            android:parentActivityName="ess.imu_logger.app.StartScreen" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="ess.imu_logger.app.StartScreen" />
        </activity>
        <activity
            android:name="ess.imu_logger.app.markdownViewer.IntroductionScreen"
            android:label="@string/title_activity_introduction"
            android:parentActivityName="ess.imu_logger.app.StartScreen" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="ess.imu_logger.app.StartScreen" />
        </activity>
        <activity
            android:name="ess.imu_logger.app.markdownViewer.AboutScreen"
            android:label="@string/title_activity_about"
            android:parentActivityName="ess.imu_logger.app.StartScreen" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="ess.imu_logger.app.StartScreen" />
        </activity>

        <receiver
            android:name="ess.imu_logger.libs.myReceiver"
            android:enabled="true"
            android:exported="true" >
            <intent-filter>
                <action android:name="ess.imu_logger.data_zip_upload.action.startService" />
                <action android:name="ess.imu_logger.libs.data_zip_upload.action.startZipperOnly" />
                <action android:name="ess.imu_logger.libs.TransferDataAsAssets.transfer" />
                <action android:name="ess.imu_logger.libs.myReceiver.periodic" />
                <action android:name="android.intent.action.TIME_SET" />
                <action android:name="android.intent.action.BOOT_COMPLETED" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </receiver>

        <service
            android:name="ess.imu_logger.app.logging.AppLoggingService"
            android:enabled="true"
            android:exported="true" />
        <service
            android:name="ess.imu_logger.libs.data_zip_upload.ZipUploadService"
            android:enabled="true"
            android:exported="true" />
        <!-- android:process=":background_logging_process" -->

        <service android:name="ess.imu_logger.app.WearableMessageListenerService" >
            <intent-filter>
                <action android:name="com.google.android.gms.wearable.BIND_LISTENER" />
            </intent-filter>
        </service>
        <service
            android:name="ess.imu_logger.libs.data_save.SensorDataSavingService"
            android:enabled="true"
            android:exported="true" >
            <intent-filter>
                <action android:name="ess.imu_logger.libs.data_save.action.saveData" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </service>
        <service
            android:name="ess.imu_logger.libs.WearableMessageSenderService"
            android:enabled="true"
            android:exported="true" >
        </service>
        <service
            android:name="ess.imu_logger.app.bluetoothLogger.BluetoothScannerService"
            android:enabled="true" >
        </service>
    </application>

</manifest>
